{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "outDir": "./out",
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
